<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.foodgraph.charuta.foodgraph.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/DrawingImageView"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hear Diet Advice"
        android:id="@+id/hearbutton"
        android:layout_gravity="center"
        android:layout_marginTop="68dp"
        android:layout_alignTop="@+id/DrawingImageView"
        android:layout_alignRight="@+id/DrawingImageView"
        android:layout_alignEnd="@+id/DrawingImageView"
        android:layout_marginRight="68dp"
        android:textSize="35sp"
        android:textAllCaps="false"
        android:layout_marginEnd="68dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Diet Advice"
        android:id="@+id/viewbutton"
        android:layout_gravity="center"
        android:layout_below="@+id/hearbutton"
        android:layout_alignLeft="@+id/hearbutton"
        android:textSize="35sp"
        android:textAllCaps="false"
        android:layout_alignStart="@+id/hearbutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="35sp"
        android:id="@+id/BMIText"
        android:layout_alignStart="@+id/viewbutton"
        android:layout_below="@+id/viewbutton" />
</RelativeLayout>